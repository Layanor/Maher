
@page
@model LoginModel

@{
    ViewData["Title"] = "تسجيل الدخول";
}


    <div class="bodybackgroun2">
        <div style="padding-top:11px">
            <div align="center">

                @if (TempData.Count > 0)

                {
                    <div align="center" class=" alert-success2" style="padding: 13px">
                        <strong>@TempData["Message"]</strong>
                    </div>
                }
                
            </div>
        </div>
        <div class="row h-100" style="min-height:550px">

            <div class="login my-auto">
                @*  *@
                <div class="content">
                    <div class="logo">
                        @* <a href="/">
                            <img src="~/loginlogo2.png" alt="logo" width="100%" height="100px">
                        </a> *@
                    </div>
                    <form id="account" method="post" class="login-form">

                        <div class="login-form">
                            <h4 class="alert alert-success form-title">تسجيل الدخول إلى حسابك</h4>
                            <div>
                                <div asp-validation-summary="ModelOnly" class="nostile alert alert-danger" style="font-size:22px ;font-weight:bold;list-style-type: none;"></div>
                            </div>
                            <div dir="rtl" class="row">
                                    <div class="col-sm-12 col-md-6">
                                        <div class="card ">
                                            <div style="background-color:#00c851" class="card-header">
                                                <div dir="rtl" align="center">
                                                    أسم المستخدم
                                                </div>
                                            </div>
                                            <div class="card-body text-primary">
                                                <div>
                                                    <div align="center" dir="rtl">
                                                        <div class="input-icon">
                                                            <i class="fa fa-user"></i>
                                                            <input style="height: 55px;" asp-for="Input.Email" autocomplete="on" class="form-control"
                                                                placeholder="   البريد الالكتروني " />
                                                        </div>
                                                    </div>
                                                    <div style="padding-top:10px; font-weight:bold; font-size:16px">
                                                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                <div class="col-sm-12 col-md-6">
                                    <div class="card ">
                                        <div style="background-color:#00c851" class="card-header">
                                            <div dir="rtl" align="center">
                                                كلمة المرور
                                            </div>
                                        </div>
                                        <div class="card-body text-primary">
                                            <div>
                                                <div align="center" dir="rtl">
                                                    <div class="input-icon">
                                                        <i class="fa fa-user"></i>
                                                        <input style="height: 55px;" asp-for="Input.Password" autocomplete="off" class="form-control" placeholder=" الرجاء كتابة  كلمة المرور " />

                                                    </div>
                                                </div>
                                                <div style="padding-top:10px; font-weight:bold; font-size:16px">
                                                    <span asp-validation-for="Input.Password" class="text-danger"></span>

                                                </div>
                                            </div>
                                        </div>

                                    </div>
                                </div>
                          

                            </div>


                            @*<div class="form-group">
                                <div class="checkbox">
                                    <label asp-for="Input.RememberMe">
                                        <input asp-for="Input.RememberMe" />
                                        @Html.DisplayNameFor(m => m.Input.RememberMe)
                                    </label>
                                </div>
                            </div>*@
                            <hr />
                            <div dir="ltr" class="form-actions">
                                <a class="pull-left" style=" padding-left: 10%;   padding-top: 13px; font-weight: bold; color: #3F51B5;" id="forgot-password" asp-page="./ForgotPassword">اعادة تعيين | تغيير كلمة المرور</a>
                                <button style="height: 55px; background-color:#00c851;min-width: 40%;" type="submit" name="btnLogin1" id="btnLogin1" class="btn green ">
                                    <i class="fas fa-passport"></i>
                                    تسجيل الدخول
                                </button>

                            </div>


                        </div>
                    </form>




                </div>

            </div>

        </div>
    </div>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

