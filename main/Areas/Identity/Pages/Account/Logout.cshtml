@page
@model LogoutModel
@{

    // ViewData["Title"] = "Log out";
}


<div class="bodybackgroun2">
    <div style="padding-top:11px">
        <div align="center">

            @if (TempData.Count > 0)

            {
                <div align="center" class=" alert-success2" style="padding: 13px">
                    <strong>@TempData["Message"]</strong>
                </div>

            }

        </div>
    </div>
    <div class="row h-100" style="min-height:550px">

        <div class="login my-auto">
            @* *@
            <div class="content">
                <div class="logo">
                    @* <a href="/">
                        <img src="~/loginlogo2.png" alt="logo" width="100%" height="100px">
                    </a> *@
                </div>


                <div class="login-form">
                    <h4 class="alert alert-success form-title">تم تسجيل خروجك من الموقع بنجاح</h4>
                    <h4 style="color: darkblue;" class="alert alert-primary form-title ">الرجاء اعادة تسجيل الدخول </h4>

                    <div class="row">

                    </div>



                    <div dir="ltr" class="form-actions">

                        <button onClick='redirectOnClick()'
                            style="height: 55px; background-color:#00c851;min-width: 40%;" name="btnLogin1"
                            id="btnLogin1" class="btn green ">
                            <i class="fas fa"></i>
                            تسجيل الدخول
                        </button>

                    </div>

                    <hr />
                </div>
                <script>
                    function redirectOnClick() {
                        document.location = '/authentication/login';
                    }
                </script>




            </div>

        </div>

    </div>
</div>
<header>
    <h1>@ViewData["Title"]</h1>
    <p>تم تسجيل خروجك من الموقع بنجاح</p>
</header>